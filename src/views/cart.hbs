<main>

    <div>

        <h1> CARRITO </h1>

        <!--{{_id}}-->

        {{#if products}}

        {{#each products}}

        <section class="section-carrito">
            <div class="cards-carrito">



                <h2>{{this.product.title}}</h2>
                <img src={{this.product.thumbnail}} />
                <p>${{this.product.price}}</p>
                <p>x{{this.quantity}}</p>

                <!-- NO FUNCIONA EL BOTON QUE ELIMINA -->

                <button class="cart__deleteBtn" id="cart__product--deleteBtn"
                    value={{this.product._id}}>Eliminar</button>


                {{/each}}

                {{else}}
                <h3>El carrito se encuentra vacio</h3>
                {{/if}}


                <button class="cart__total--btn">Vaciar carrito</button>
                <!-- NO FUNCIONA EL BOTON DE CONFIRMAR -->
                <button class="cart__total--btn" id="purchase__btn" value={{cart.products._id}}>Confirmar
                    compra</button>

            </div>

</main>

<script src="/js/cart.js"></script>