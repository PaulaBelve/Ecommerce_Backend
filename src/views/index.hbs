<main>

    {{#if user}}
    <h2>Hola
        {{this.user.first_name}}
        {{this.user.last_name}}!</h2>


    <div>
        <li><a href="/admin">Administrador</a></li>
        <li><a href="/api/session/current">Sesiones</a></li>
        <li><a href="/cart/{{this.user.cart}}">Carrito</a></li>
        <li><a href="/logout">Logout</a></li>

    </div>
    {{/if}}

    <div>
        <h1 class="title"> PRODUCTOS </h1>

        <div class="pagination__container">
            <div class="filters__container">
                <h4>Filters:</h4>
                <div>category</div>
                <button class="pagination__button">most expensive</button>
                <button class="pagination__button">less expensive</button>
            </div>
            <div class="pages__container">
                <a href={{response.prevLink}}><button class="pagination__button">Anterior</button></a>
                <a href={{response.nextLink}}><button class="pagination__button">Siguiente</button></a>
            </div>
        </div>

        {{#each payload}}

        <section class="section-budines">
            <div class="cards-products">


                <picture><img src={{this.thumbnail}} /></picture>
                <h2>{{this.title}}</h2>
                <p>{{this.description}}</p>
                <p>${{this.price}}</p>

                <a href="/product/{{this._id}}"><button>Ver descripci√≥n</button></a>

                {{/each}}


            </div>

        </section>

</main>