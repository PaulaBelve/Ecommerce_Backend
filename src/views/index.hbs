<h1 class="title"> PRODUCTOS </h1>





{{#if products.length}}
{{#each products}}
<a href="/product/{{this.title}}">
    <section class="section-budines">
        <div class="cards-products">

            <picture><img src="{{this.thumbnail}}" /></picture>
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <p>{{this.price}}</p>



        </div>

    </section>
</a>

{{/each}}
{{/if}}



<style>
    img {

        width: 100%;
    }

    .title {

        text-align: center;
        color: blueviolet;
    }

    .section-budines {
        display: flex;
        flex-direction: row;
        gap: 2rem;
        margin-top: 1.5rem;
        justify-content: space-around;
        align-items: center;
    }

    .cards-products {

        /* border: solid red; */

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 20%;
        /* height: 50%; */
        border-radius: 4px;
        box-shadow: 0 0 5px cadetblue;
        text-align: center;
    }
</style>

